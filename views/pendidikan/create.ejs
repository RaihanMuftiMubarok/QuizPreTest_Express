<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EXPRESS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
<form action="/pendidikan/store" method="POST">
    <div class="container px-5 py-4 bg-success-subtle">
      <div class="mb-3 px-5">
        <label for="id_mahasiswa" class="form-label">Nama Mahasiswa</label>
        <select class="form-select" aria-label="Default select example" name="id_mahasiswa" required>
            <option selected>Pilih</option>
                        <% for(var i=0; i < data.length; i++){ %>
                            <option value="<%= data[i].id_mahasiswa %>"><%= data[i].nama_depan %></option>
                        <% } %>
                    </select>
    </div>
  <div class="mb-3 px-5">
    <label for="nama_instansi" class="form-label">Nama Instansi</label>
    <input type="text" class="form-control" name="nama_instansi" required />
  </div>
  <div class="mb-3 px-5">
    <label for="jurusan" class="form-label">Jurusan</label>
    <input type="text" class="form-control" name="jurusan" required />
  </div>
  <div class="mb-3 px-5">
    <label for="tahun_masuk" class="form-label">Tahun Masuk</label>
    <input type="year" class="form-control" name="tahun_masuk" required />
  </div>
  <div class="mb-3 px-5">
    <label for="tahun_lulus" class="form-label">Tahun Lulus</label>
    <input type="year" class="form-control" name="tahun_lulus" required />
  </div>
  <div class="mb-3 px-5">
    <label for="nomor_ijazah" class="form-label">Nomor Ijazah</label>
    <input type="number" class="form-control" name="nomor_ijazah" required />
  </div>
    
  <div class="mb-3 px-5">
    <button type="submit" class="btn btn-sm btn-success">Simpan</button>
  </div>
</div>
</form>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>